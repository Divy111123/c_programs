#include <stdio.h>

int main() {
     float balance =100000;
     int deposit,withdraw;
     int choice;
     do{
     printf("------------ATM menu----------\n");
     printf("1.balance enquiry\n");
     printf("2.deposit\n");
     printf("3.withdraw\n");
     printf("4.exit \n");
     printf("choice :  \n");
     scanf("%d",&choice);
     switch(choice){
         case 1:
         printf("balance = %.2f",balance);
         break;
         case 2 :
         printf("enter the amount :  ");
         scanf("%d",&deposit);
         balance = balance +deposit;
         printf("updated balance =%.2f",balance);
         break;
         case 3:
         printf("enter withdraw amount :  ");
         scanf("%d",&withdraw);
         if(withdraw <=balance){
             balance=balance-withdraw;
             printf("updated balance is  :%.2f",balance);
         }else{
             printf("sorry insufficient balance ");
         }
         break;
         case 4:
         printf("thankyu");
         break;
         default:
         printf("invalid");
     }
         
     }

     while(choice!=4);
         return 0;
     }
