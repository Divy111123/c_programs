#include <stdio.h>

int main() {
      int a ;
      int b;
      printf("enter first number : ");
      scanf("%d",&a);
      printf("enter second number : ");
      scanf("%d",&b);
     int operations;
     printf(" choose operations :");
     printf("1 : addition");
     printf("2 : subraction ");
     printf("3 : multiplications\n");
      scanf("%d",&operations);
     switch(operations)
     {
          case 1 :printf("%d",a+b);
          break;
          case 2: printf("%d",a - b);
          break;
          case 3 :printf ("%d",a * b) ;
          break;
          default :printf("wrong number baibeee");
      }
}
